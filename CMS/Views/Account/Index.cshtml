@model List<CMS.Models.User>
@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewBag.Title = "Index";
}

<h2>Users List</h2>
<hr />
@{ 
    if (TempData["Feedback"] != null)
    {
<div class='alert alert-success alert-dismissable'>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong><i class="fa fa-1x fa-check"></i> Success</strong>
    <span>@TempData["Feedback"]</span>
</div>       
    }
}
<a href="~/Account/Create" class="btn btn-default"> <i class="fa fa-plus"></i> &nbsp; Add User</a>
<br />
<br />
@{
    if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <strong>Oops!</strong> No Users data available
        </div>
    }
    else

    {
        <table class="table table-bordered" style="width:700px;">
            <tr>
                <th>Id</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Action</th>
            </tr>

            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Role.RoleName</td>
                        <td>
                            <a href="~/Account/Edit/@item.Id" class="btn btn-sm btn-warning"><i class="fa fa-1x fa-user-edit"></i> Edit</a>
                            <a href="~/Account/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Do you want to delete @item.Id user?');"><i class="fa fa-1x fa-times"></i> Delete</a>
                        </td>
                    </tr>

                }
            }
        </table>
                }
}
