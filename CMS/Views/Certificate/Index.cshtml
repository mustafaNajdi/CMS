@model List<CMS.Models.CertificateType>
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

@{
    if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <strong>Oops!</strong> No Certificate data available
        </div>
    }
    else

    {
        <table class="table table-bordered">
            <tr>
                <th>Type</th>
                <th>Price</th>
                <th>Action</th>
            </tr>

            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Type</td>
                        <td>@item.Price</td>
                      
                    </tr>
                    
                }
            }
        </table>
                }
}