@model CMS.Models.Student
@{
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Student", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, Model.FirstName, new { @class = "col-md-8 form-control", Placeholder = "First Name..." })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, Model.LastName, new { @class = "col-md-8 form-control", Placeholder = "Last Name..." })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, Model.Email, new { @class = "col-md-8 form-control", Placeholder = "Email..." })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StudentIndex, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.StudentIndex, new { @class = "col-md-8 form-control", Placeholder = "Student Index..." })
                </div>
            </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, Model.PhoneNumber, new { @class = "col-md-8 form-control", Placeholder = "Phone Number..." })
            </div>
            
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Faculty, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.FacultyId, (IEnumerable<SelectListItem>)ViewBag.Faculties, "Select Faculty", new { @class = "col-md-8 form-control" })
            </div>
            </div>
            </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>


        }
<div>
    <ul class="pager">
        <li class="previous"><a href="~/Student/"><span aria-hidden="true">&larr;</span> Back</a></li>
    </ul>
</div>

